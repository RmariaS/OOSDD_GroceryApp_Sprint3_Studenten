<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="Login &amp; Registratie">

    <ScrollView>
        <StackLayout Padding="20" VerticalOptions="Center">

            <!-- LOGIN -->
            <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Email" Text="{Binding LoginEmail}" Keyboard="Email" />
            <Entry Placeholder="Wachtwoord" Text="{Binding LoginPassword}" IsPassword="True" />
            <Button Text="Login" Command="{Binding LoginCommand}" />

            <BoxView HeightRequest="1" Color="Gray" Margin="0,20,0,20" />

            <!-- REGISTRATIE -->
            <Label Text="Registreren" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Naam" Text="{Binding RegisterName}" />
            <Entry Placeholder="Email" Text="{Binding RegisterEmail}" Keyboard="Email" />
            <Entry Placeholder="Wachtwoord" Text="{Binding RegisterPassword}" IsPassword="True" />
            <Button Text="Account aanmaken" 
                    Command="{Binding RegisterCommand}" 
                    BackgroundColor="Pink" 
                    TextColor="Black" 
                    Margin="0,10,0,0" />

            <Label Text="{Binding LoginMessage}" 
                   TextColor="Red" 
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>
